.charts
  .chart-month
    display flex
    width 100%
    height 10em
    margin 1em 0 4em 0
    .chart-row
      position relative
      flex 1
      background linear-gradient(81deg, rgba(0,0,0,0.05), transparent, transparent)
      label
        white-space nowrap
        transform rotateZ(75deg) translateX(50%)
        position absolute
        top 100%
        transform-origin 50% 0
        font-size .7em
        z-index 2
      .chart-bar
        position absolute
        width 80%
        left 10%
        background #c5b0b0
        .chart-bar-box
          width 100%
          height 100%
  .chart-equipment, .chart-people
    display flex
    flex-wrap wrap
    justify-content space-between
    .img
      margin .1em
    &:after
      content ''
      flex 10 0 auto