.person-details
  .data
    h3 #{item.name}
    .img-edit
      .img
        img.thumbnail(src=app.thumbnail(item.image))
      .edit
        button(onclick='app.edit()') Edit
    .totalUses 
      .icon.icon-trip
      | No events: #{item.totalUses}
    .totalTime 
      .icon.icon-time
      | Total time: !{msToHm(item.totalTime)}
  .qr
    canvas.qrcode
if item.attachedTo
  .attached
    h4 Currently using
    .attached-details
      .img
        img(src=app.thumbnail(item.attachedTo.image, 60))
      .name= item.attachedTo.name
      .date= app.dateFormat.dateTime(item.attachedDate)
.charts
  .chart-month
  .chart-equipment