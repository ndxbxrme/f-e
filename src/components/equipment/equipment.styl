.mobile
  .equipment
    .equipment-details
      display flex
      max-width 100%
      overflow hidden
      .data
        flex 1
        display flex
        flex-direction column
        justify-content space-between
        padding .5em 0
        h3
          margin 0
        .icon
          display inline-block
        .totalUses, .totalTime
          font-size .8em
          display flex
          align-items center
      .qr
        flex 1
        position relative
        .qr-container
          padding-top 100%
          width 100%
          position relative
          canvas
            max-width 100%
            height 100%
            max-height 100%
            position absolute
            top 0
            left 0
    .img-edit
      display flex
      justify-content space-between
      .edit
        margin 0 1em
    .attached
      background white
      padding .5em
      h4
        margin 0
      .attached-details
        display flex
        font-size .8em
        margin-top .5em
        .name
          flex 1
          margin 0 1em
    .maintenance
      background white
      padding .5em
      margin 1em 0
      h4
        margin 0
      .maintenance-details
        display flex
        align-items center
        .schedulePercent-box
          flex 1
          margin-right 1em
